@model newsly.Models.Subscriber

<footer class="d-flex flex-wrap justify-content-around">
    <div>
        <h1>newsly</h1>
        <div class="d-flex justify-content-sm-around">
            <i class="fab fa-facebook"></i>
            <i class="fab fa-twitter"></i>
            <i class="fab fa-youtube"></i>
            <i class="fab fa-linkedin-in"></i>
            <i class="fab fa-instagram"></i>
        </div>
    </div>
    <div>
        <div>Email</div>
        <a href="mailto:mamoanwar@hotmail.com">mamoanwar@hotmail.com</a>
    </div>
    <div>
        <div>Phone</div>
        <a href="tel:+2010-0964-9613">0100 964 9613</a>
    </div>
    <div>
        @using (@Html.BeginForm("Subscribe", "Home"))
        {
            <label for="email" style="display: block;">Stay Updated</label>

            @Html.TextBoxFor(n => n.email, new { @class = "subscribe", placeholder = "Email address", type = "email" })
            @Html.HiddenFor(n => n.Id)
            @Html.AntiForgeryToken() <!-- Security Token -->

            <button type="submit" class="btn footer-btn">Subscribe</button>

        }
    </div>
</footer>
