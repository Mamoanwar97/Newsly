        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="main-section d-flex flex-wrap">
    <div class="col-md-5">
        <!--left side panel-->
        <h2 class="panel-title">Most Recent</h2>
        <div class="recent-content">
            @if (!Model.Any())
            {
                <p>We don't have any Articles yet.</p>
            }
            else
            {
                <div class="d-lg-flex justify-content-around col-lg-12 container flex-wrap">
                    @foreach (var article in Model.Reverse().Take(5))
                {
                        <div class="card mb-3 w-100 Recent-cards">
                            <div class="row no-gutters">
                                <div class="col-md-4">
                                    <img src=@article.Img_link class="card-img" alt=@article.Title>
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">@Html.ActionLink(article.Title, "Details", "News", new { id = article.Id }, null)</h5>
                                        @if (@article.Author != null)
                                        {
                                            <p class="card-text text-muted">@article.Author</p>
                                        }
                                        @if (@article.Date != null)
                                        {
                                            <p class="card-text"><small class="text-muted">@article.Date</small></p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            }
        </div>
    </div>
    <div class="col-md-7 side d-flex flex-wrap justify-content-center">
        <!--Right side panel-->
        <div class="w-75 wrapper">
            <h2 class="panel-title">Watch now</h2>
            <div class="w-100">
                <iframe src="https://www.youtube.com/embed/XQKIJEAoDdE?controls=0" class="video" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen title="youtube-video"></iframe>
            </div>
        </div>
        <div class="w-75 wrapper">
            <h2 class="panel-title">Contact-us</h2>
            <div class="w-100">
